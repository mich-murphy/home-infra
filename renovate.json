{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":rebaseStalePrs",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "enabledManagers": [
    "kubernetes",
    "helm",
    "ansible",
    "docker",
    "terraform"
  ],
  "ignorePaths": [
    "**/docker/immich/**"
  ],
  "kubernetes": {
    "managerFilePatterns": ["/kubernetes/.+\\.ya?ml$/"]
  }
}
